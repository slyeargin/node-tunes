extends ../shared/template

block content
  h1 #{songs[0].album.name}

  #meta
    img(src='/img/albums/#{songs[0].album.cover}', class='metaPhoto')

  table#songs
    each song in songs
      tr.song
        td.songName #{song.name}
        td.audio
          audio(src="#{song.file}", controls=true)
